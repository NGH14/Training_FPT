@{
    var culture = CultureInfo.CurrentCulture.Name;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<title>@ViewData["Title"]</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="@ViewData["Description"]">
	<meta name="author" content="">






	<link rel="icon" href="https://fpt.com.vn/Content/home/images/favicon.png" type="image/x-icon">
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&display=swap" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

	<link rel="stylesheet" href="~/css/resetcss.css" />



	<link rel="stylesheet" href="~/css/site2.css" />
	<link rel="stylesheet" href="~/css/line.css" />
	<link rel="stylesheet" href="~/css/darkmode.css" />
	<link rel="stylesheet" href="~/css/GoTopButton.css" />
	<link rel="stylesheet" href="~/css/responsive.css" />


</head>
<body>

	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white">
			<div class="container">

				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
					<img src="https://fpt.com.vn/Content/home/images/icon/ic-logo.png" alt="FPTlogo" width="150" height="90">
				</a>
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"></a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
					<ul class="nav navbar-nav navbar-right">
						<li class="nav-item ">
							@if (User.Identity.IsAuthenticated)
							{
				<div style="margin-left: 15px; color:var(--black);" class="span6">Hi,<strong> @User.Identity.Name</strong></div>

								<form action="/@culture/Account/Logout" method="post">
									<button type="submit" style="padding-right:0;margin-top:10px;margin-bottom:0px;background:transparent;border:none;">
										<span class="btn btn-primary" role="button"><localize>Log Out</localize></span>
									</button>
								</form>}
							else
							{

				<a class="btn btn-primary" role="button" asp-area="" asp-controller="Account" asp-action="Login" localize-content>Log In</a>}
						</li>

						<li class="nav-item">
							<div style=" text-decoration: none !important; color: var(--black) !important; font-weight: 400!important; text-transform: capitalize; font-family: var(--font); padding: 0 10px;  line-height: 40px; font-size:0.751rem; border: 0; opacity: 1; transition: color 0.3s ease-in-out 0s;">
								<language-nav language-label="NativeName"
											  cookie-handler-url="@(Url.Action("SetCultureCookie", "Home", new { area= "", cltr="{0}", returnUrl="{1}" }))">
								</language-nav>
							</div>
						</li>

					</ul>



					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-route-culture="@culture" asp-area="" asp-controller="Home" asp-action="Index" localize-content>Home</a>
						</li>





						<li class="nav-item">
							@if (User.Identity.IsAuthenticated)
							{

				<a class="nav-link text-dark" asp-route-culture="@culture" asp-controller="Home" asp-action="Change" localize-content>Training</a>}

						</li>




						<div class="nav-item dropdown">
							<a href="#" data-toggle="dropdown" class="nav-item nav-link dropdown-toggle">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-gear-fill" viewBox="0 0 16 16">
									<path d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872l-.1-.34zM8 10.93a2.929 2.929 0 1 1 0-5.86 2.929 2.929 0 0 1 0 5.858z" />
								</svg>
							</a>
							<div class="dropdown-menu">
								<form>
									<div class="theme-switch-wrapper" style="position: unset; top:auto; right:auto;">

										<span> <localize>Dark Mode</localize>: </span>
										<label class="theme-switch" for="checkbox">
											<input type="checkbox" id="checkbox" />
											<div class="slider round"></div>
										</label>
									</div>
								</form>


							</div>
						</div>
					</ul>
				</div>
			</div>
		</nav>
		<img class="hide-over" style="width: 100%; max-height: 300px; object-fit: cover; box-shadow: 0 0 15px var(--title-color);" src="https://fpt.com.vn/Images/images/banner/Ve-FPT/ve-FPT.png" alt="">
	</header>



	<!-- Header End====================================================================== -->
	@RenderSection("slider", required: false)
<div id="mainBody">
	<div class="container">

		<!-- Sidebar ================================================== -->
		<!-- Sidebar end=============================================== -->
		<main role="main" class="pb-3">
			<a href="#top"> </a>

			@RenderBody()

			<button class="scrollToTopBtn">^</button>
		</main>
	</div>


	<div class="text-center">
		<img style=" margin: 0 -17px -15px 0; vertical-align: middle; border-style: none; height: 135px;
width: 85px; object-fit: cover; overflow: hidden; object-position: left; "
			 src="https://fpt.com.vn/Content/home/images/canvas/cv-20.png" alt="">
		<img style="margin: -10px; vertical-align: middle; border-style: none; height: 125px;
width: 105px; object-fit: cover; overflow: hidden; object-position: center; "
			 class="fpt-charac" src="https://fpt.com.vn/Content/home/images/canvas/cv-21.png" alt="">
		<img style="margin: 20px -20px 0-30px;vertical-align: middle; border-style: none; height: 150px;
width: 110px; object-fit: cover; overflow: hidden; object-position: right; "
			 class="fpt-charac" src="https://fpt.com.vn/Content/home/images/canvas/cv-22.png" alt="">
	</div>

</div>


	<!-- Placed at the end of the document so the pages load faster ============================================= -->
	<script src="/themes/js/jquery.js" type="text/javascript"></script>
	<script src="/themes/js/bootstrap.min.js" type="text/javascript"></script>
	<script src="/themes/js/google-code-prettify/prettify.js"></script>

	<script src="/themes/js/bootshop.js"></script>
	<script src="/themes/js/jquery.lightbox-0.5.js"></script>

	<span id="/themesBtn"></span>


	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/js/GoTopButton.js" asp-append-version="true"></script>
</body>
</html>